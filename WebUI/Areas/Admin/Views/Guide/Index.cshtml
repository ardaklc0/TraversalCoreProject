@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}

<style>
    img {
        border-radius: 50%;
    }
</style>

<h1>Rehber Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        {counter ++;}
        <tr>
            <td>@counter</td>
            <td><img src="@item.Image" width="50" height="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @{
                if (item.Status)
                {
                    <td><a href="/Admin/Guide/ChangeToFalse/@item.Id" class="btn btn-outline-warning">Pasif Yap</a></td>
                }
                else
                {
                    <td><a href="/Admin/Guide/ChangeToTrue/@item.Id" class="btn btn-outline-info">Aktif Yap</a></td>
                }
            }
            <td><a href="/Admin/Guide/EditGuide/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide" class="btn btn-outline-primary">Yeni Rehber Ekle</a>
