@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}

<h1>Bize Ulaşın Mesajları</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Gönderen</th>
            <th>Konu</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Mesajı Aç</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <td>@counter</td>
                <td>@item.Name</td>
                <td>@item.Subject</td>
                <td>@item.MessageDate.ToString("dd.MMM.yyyy")</td>
                <td>
                    <a href="#" class="btn btn-outline-danger">Sil</a>
                </td>
                <td>
                    <a href="#" class="btn btn-outline-primary">Mesajı Aç</a>
                </td>
            </tr>
        }
    </tbody>
</table>

