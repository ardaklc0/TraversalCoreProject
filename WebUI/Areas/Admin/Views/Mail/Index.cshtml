@model TraversalCoreProject.Models.MailRequestModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
        <span asp-validation-for="ReceiverMail" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mail Konusu")
        <input type="text" asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mail İçeriği")
        <textarea cols="30" rows="5" type="text" asp-for="Body" class="form-control"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <br />
    <button class="btn btn-outline-primary">Mail Gönder</button>
</form>
